<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_placeholder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/material_design_keyline_one">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageview_placeholder"
            style="@style/PlaceholderImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            tools:src="@drawable/image_bucket_empty" />

        <TextView
            android:id="@+id/textview_placeholder"
            style="@style/PlaceholderTitle"
            android:gravity="center_horizontal"
            tools:text="Placeholder title" />

        <com.cremy.firebucket.presentation.ui.widgets.MaterialDesignFlatButton
            android:id="@+id/cta_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
    </LinearLayout>
</FrameLayout>